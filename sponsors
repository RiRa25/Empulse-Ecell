    <script>
      function createStars() {
          // Clear any existing stars
          document.body.innerHTML = '';
          
          // Create stars with different sizes
          createStarGroup(500, 'small');   // Lots of tiny stars
          createStarGroup(100, 'medium');  // Medium stars
          createStarGroup(50, 'large');    // Few large stars
      }
  
      function createStarGroup(count, size) {
          for (let i = 0; i < count; i++) {
              const star = document.createElement('div');
              star.className = `star ${size}`;
              
              // Random position
              star.style.left = `${Math.random() * 100}%`;
              star.style.top = `${Math.random() * 100}%`;
              
              // Random animation delay
              star.style.animationDelay = `${Math.random() * 5}s`;
              
              document.body.appendChild(star);
          }
      }
  
      // Initial creation
      createStars();
  
      // Recreate stars on window resize
      // <h1 class="highlight">EMPULSE 2025</h1>
      window.addEventListener('resize', createStars);
  
      window.onload = function() {
        const poster = document.getElementById("poster");
        poster.style.animation = "fadeInZoom 1.5s ease-in-out forwards";
    };
  
  </script>

  <div class="galaxy-background">
